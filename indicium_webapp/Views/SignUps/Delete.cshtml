@model indicium_webapp.Models.SignUp

@{
    ViewData["Title"] = "Inschrijving verwijderen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inschrijving verwijderen</h2>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Inschrijving</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="SignUpID" />
        <dt>
            @Html.DisplayNameFor(model => model.Activities.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activities.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activities.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activities.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activities.StartDateTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activities.StartDateTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activities.EndDateTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activities.EndDateTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activities.NeedsSignUp)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activities.NeedsSignUp)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activities.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activities.Price)
        </dd>
    </dl>

    <form asp-action="delete" asp-route-id="@Model.ActivityID" method="post">
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-primary">Verwijderen</button>
            <a asp-action="Index" class="btn btn-default">Terug naar overzicht</a>
        </div>
    </form>
</div>
