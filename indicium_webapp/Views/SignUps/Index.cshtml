@model IEnumerable<indicium_webapp.Models.SignUp>

@{
    ViewData["Title"] = "Inschrijvingen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inschrijvingen</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Activities.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activities.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activities.StartDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activities.EndDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activities.NeedsSignUp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activities.Price)
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activities.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activities.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activities.StartDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activities.EndDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activities.NeedsSignUp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activities.Price)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="details" asp-route-id="@item.SignUpID">Details</a>
                        <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.ActivityID">Uitschrijven</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Er zijn geen inschrijvingen gevonden.</p>
}
