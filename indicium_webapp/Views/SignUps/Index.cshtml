@model IEnumerable<SignUpViewModel>

@{
    ViewData["Title"] = "Inschrijvingen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inschrijvingen</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Activity.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activity.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activity.StartDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Activity.EndDateTime)
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activity.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activity.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activity.StartDateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activity.EndDateTime)
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="details" asp-route-id="@item.SignUpID"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                        <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Activity.ActivityID">Uitschrijven</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Er zijn geen inschrijvingen gevonden.</p>
}
