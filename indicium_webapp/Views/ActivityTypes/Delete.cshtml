@model ActivityTypeViewModel

@{
    ViewData["Title"] = "Activiteittype verwijderen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activiteittype verwijderen</h2>

<h3>Weet je zeker dat je de activiteittype wilt verwijderen?</h3>
<div>
    <h4>Activiteittype</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ActivityTypeID" />
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BackgroundColor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BackgroundColor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BorderColor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BorderColor)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TextColor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TextColor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Terug naar overzicht</a>
        </div>
    </form>
</div>
