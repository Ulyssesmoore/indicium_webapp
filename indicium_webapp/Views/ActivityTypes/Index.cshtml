@model IEnumerable<ActivityTypeViewModel>

@{
    ViewData["Title"] = "Activiteittype's";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activiteittype's</h2>
<hr/>

<p>
    <a asp-action="Create" class="btn btn-primary">Toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BackgroundColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BorderColor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TextColor)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BackgroundColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorderColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextColor)
            </td>
            <td>
                <a class="btn btn-warning" role="button" asp-action="Edit" asp-route-id="@item.ActivityTypeID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.ActivityTypeID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
