@model IEnumerable<ActivityViewModel>

@{
    ViewData["Title"] = "Activiteiten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activiteiten</h2>
<hr/>

<p>
    <a asp-action="Create" class="btn btn-primary">Toevoegen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NeedsSignUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignUps)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NeedsSignUp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SignUps.Count)
                </td>
                <td>
                    <a class="btn btn-success" role="button" asp-action="Details" asp-route-id="@item.ActivityID"><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span></a>
                    <a class="btn btn-warning" role="button" asp-action="Edit" asp-route-id="@item.ActivityID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.ActivityID"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>