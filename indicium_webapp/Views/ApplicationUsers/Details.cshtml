<div>
    @if (this.User.IsInRole("Secretaris") && Model.Status == Status.Nieuw)
    {
        <form asp-area="" asp-action="approve" asp-route-id="@Model.Id" method="post" style="display: inline-block">
            <button type="submit" class="btn btn-success">Goedkeuren</button>
        </form>
        <form asp-area="" asp-action="disapprove" asp-route-id="@Model.Id" method="post" style="display: inline-block">
            <button type="submit" class="btn btn-danger">Afkeuren</button>
        </form>
    }
    
    @if (User.IsInRole("Secretaris"))
    {
        <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Bewerken</a>
    }
    <a asp-action="Index" class="btn btn-default">Terug naar overzicht</a>
</div>
