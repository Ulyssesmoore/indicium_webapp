@if (this.User.IsInRole("Bestuur") || this.User.IsInRole("Secretaris"))
{
    <div>
        @if (Model.IsApproved == 0)
        {
            <form>
                <div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="IsApproved" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="IsApproved" class="form-control">
                                <option value="1">Goed</option>
                                <option value="2">Fout</option>
                            </select>
                            <span asp-validation-for="StudyType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Keur" class="btn btn-default" formmethod="post" />
                    </div>
                </div>
            </form>
        }
    </div>
}

